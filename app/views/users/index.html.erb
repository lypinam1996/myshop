
<p id="notice"><%= notice %></p>
<div class="container">
<h1>Users</h1>

<table class="text-center" >
  <thead>
    <tr>
      <th>Email</th>
      <th>Full name</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.full_name %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Show', user %></td>
        <% if current_user && current_user.role? && !user.role? %><td><%= link_to 'Edit', edit_user_path(user) %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Main page', productions_path %>
</div>
