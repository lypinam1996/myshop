<p id="notice"><%= notice %></p>
<div class="container">
<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Fullname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.fullname %></td>
        <td><%= link_to 'Show', author %></td>
        <% if current_user && current_user.role? %><td><%= link_to 'Edit', edit_author_path(author) %></td><% end %>
        <% if current_user && current_user.role? %><td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user && current_user.role? %><%= link_to 'New Author', new_author_path %><% end %><br>
<%= link_to 'Main page', productions_path %>
</div>
