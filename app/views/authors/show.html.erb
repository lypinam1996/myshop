<div class="container">
<div class="row">
<p id="notice"><%= notice %></p>

<p>
  <strong>Fullname:</strong>
  <%= @author.fullname %><br>
</p>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Author</th>
      <th>Count</th>
      <th>Pages</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <tbody>
    <% @productions.each do |production| %>
      <tr>
        <td><%= production.title %></td>
        <td><%= production.price %></td>
        <td><%= production.author.fullname %></td>
        <td><%= production.count %></td>
        <td><%= production.pages %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if current_user && current_user.role? %><%= link_to 'Edit author', edit_author_path(@author) %> |<% end %>
<%= link_to 'Back', authors_path %></div></div>
