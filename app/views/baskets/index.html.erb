<p id="notice"><%= notice %></p>
<div class="container">
<h1>Baskets</h1>

<table>
  <thead>
    <tr>
      <th>Production</th>
      <th>Price</th>
      <th>Author</th>
      <th>Pages</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @baskets.each do |basket| %>
      <tr>
        <td><%= basket.production_id %></td>
        <td><%= basket.production.price %></td>
        <td><%= basket.production.author.fullname %></td>
        <td><%= basket.production.pages %></td>
        <td><%= basket.count %></td>
        <td><%= link_to 'Show', basket %></td>
        <td><%= link_to 'Destroy', basket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Main page', productions_path %>
<br>
</div>

